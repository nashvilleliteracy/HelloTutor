@(Html.Kendo().DropDownList()
            .Name("RolesDropDownList") //The name of the DropDownList is mandatory. It specifies the "id" attribute of the widget.
            .DataTextField("RoleName") //Specify which property of the Product to be used by the DropDownList as a text.
            .DataValueField("RoleId") //Specify which property of the Product to be used by the DropDownList as a value.
            .DataSource(source =>
            {
                source.Read(read =>
                {
                    read.Action("Roles_Read", "Role"); //Set the Action and Controller names.
                })
                .ServerFiltering(true); //If true, the DataSource will not filter the data on the client.

            })
            .SelectedIndex(0)//Select the first item.
)